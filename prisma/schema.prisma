// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  phone    String
  email    String @unique
  password String
  role     Role   @default(USER)

  @@map("users")
}

enum Role {
  ADMIN
  USER
}
